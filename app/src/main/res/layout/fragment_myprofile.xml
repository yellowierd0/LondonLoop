<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_500">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_card"><TextView
        android:layout_width="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="40dp"
        android:id="@+id/userCount"
        android:layout_height="60dp" /><TextView
        android:layout_width="200dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center"
        android:layout_marginRight="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="60dp"
        android:text="@string/currently_walking"/></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_card"><TextView
        android:layout_width="200dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="60dp"
        android:text="@string/toal_miles"/><TextView
        android:layout_width="100dp"
        android:id="@+id/total_miles"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="40dp"
        android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_card"><TextView
        android:layout_width="150dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="60dp"
        android:text="@string/total_walks"/><TextView
        android:layout_width="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/appTime"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="40dp"
        android:layout_height="60dp"
        android:text="20"/>
        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="60dp"
            android:text="hours"/></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_card"><TextView
        android:layout_width="150dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="60dp"
        android:text="You have walked "/><TextView
        android:layout_width="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/milesWalked"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="40dp"
        android:layout_height="60dp"
        android:text="6"/>
        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="60dp"
            android:text="miles"/></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_card"><TextView
        android:layout_width="150dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="60dp"
        android:text="You have completed "/><TextView
        android:layout_width="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/walksCompleted"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="40dp"
        android:layout_height="60dp"
        android:text="1"/>
        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="60dp"
            android:text="walk"/></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_card"><TextView
        android:layout_width="150dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="60dp"
        android:text="Users have collectively walked "/><TextView
        android:layout_width="50dp"
        android:layout_marginTop="12dp"
        android:id="@+id/collectiveWalk"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="40dp"
        android:layout_height="60dp"
        android:text="14"/>
        <TextView
            android:layout_width="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="60dp"
            android:text="walks"/></LinearLayout>
    <!--com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_login_button"/-->

</LinearLayout>
</ScrollView>
