<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_500">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/primary_500"><TextView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/primary_500"
        android:textSize="40sp"
        android:id="@+id/userCount"
        android:layout_height="wrap_content" /><TextView
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/primary_500"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="wrap_content"
        android:text="@string/currently_walking"/></LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_500"
        android:orientation="vertical">
        <TextView
        android:layout_width="300dp"
            android:padding="10dp"
        android:layout_gravity="center"
        android:textColor="@color/primary_500"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="wrap_content"
        android:text="@string/total_miles"/><TextView
        android:layout_width="300dp"
        android:id="@+id/total_miles"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/primary_500"
        android:padding="10dp"
        android:textSize="40sp"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_500"
        android:orientation="vertical"><TextView
        android:layout_width="300dp"
        android:padding="10dp"
        android:textColor="@color/primary_500"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="wrap_content"
        android:text="@string/total_time"/><TextView
        android:layout_width="300dp"
        android:id="@+id/total_time"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/primary_500"
        android:textSize="40sp"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/primary_500">
        <TextView
            android:layout_width="340dp"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_500"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/total_walks"/>
        <TextView
            android:layout_width="300dp"
            android:id="@+id/total_walks"
            android:padding="10dp"
            android:textColor="@color/primary_500"
            android:textSize="40sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/primary_500">
        <TextView
            android:layout_width="340dp"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_500"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/global_time"/>
        <TextView
            android:layout_width="300dp"
            android:id="@+id/global_time"
            android:padding="10dp"
            android:textColor="@color/primary_500"
            android:textSize="40sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/primary_500">
        <TextView
            android:layout_width="340dp"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_500"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/global_miles"/>
        <TextView
            android:layout_width="300dp"
            android:id="@+id/global_miles"
            android:padding="10dp"
            android:textColor="@color/primary_500"
            android:textSize="40sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/primary_500">
        <TextView
            android:layout_width="340dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_500"
            android:layout_gravity="center"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/global_walks"/>
        <TextView
            android:layout_width="300dp"
            android:id="@+id/global_walks"
            android:textColor="@color/primary_500"
            android:textSize="40sp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <!--com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_login_button"/-->

</LinearLayout>
</ScrollView>
