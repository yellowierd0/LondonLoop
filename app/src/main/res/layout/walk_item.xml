<?xml version="1.0" encoding="utf-8"?>
<!-- the parent view - provides the gray listfragment background color -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_card">

        <!-- Card Contents go here -->

        <ImageView android:id="@+id/ivIcon"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="icon description"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true" />

        <!-- the title view -->
        <TextView android:id="@+id/walkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        <!-- the description view -->
        <TextView android:id="@+id/walkLength"
            android:layout_below="@id/walkTitle"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small" />

    </LinearLayout>

</FrameLayout>