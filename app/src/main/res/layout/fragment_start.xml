<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/primary_700"
        android:background="@drawable/button_light"
        android:text="If you would not like to use your current location, plase enter one below" />
    <EditText
        android:id="@+id/startWalkText"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/primary_700"
        android:hint="please enter postcode or station name"
        android:background="@drawable/button_light"/>
    <Button
        android:id="@+id/gpsButton"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/button_dark"
        android:text="Take me to the Start Point from my location" />

    <CheckBox android:id="@+id/checkbox_bus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bus"
        android:textColor="@color/primary_700"
        android:background="@drawable/button_light"
        android:layout_gravity="center"/>
    <CheckBox android:id="@+id/checkbox_tube"
        android:layout_width="200dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/primary_700"
        android:background="@drawable/button_light"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tube"/>
    <CheckBox android:id="@+id/checkbox_train"
        android:layout_width="200dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:textColor="@color/primary_700"
        android:background="@drawable/button_light"
        android:layout_height="wrap_content"
        android:text="Train"/>
    <CheckBox android:id="@+id/checkbox_boat"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/primary_700"
        android:background="@drawable/button_light"
        android:layout_height="wrap_content"
        android:text="Boat"/>

    <Button
        android:id="@+id/noNavButton"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="I'm at the start point"
        android:background="@drawable/button_dark"/>


</LinearLayout>